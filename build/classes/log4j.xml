<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "dtd/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="FileTxtAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="C:/Documents and Settings/Yury_Yaroshevich/workspaceIndigo/TestAppHibernateJPA/taHiberJPA.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p [%C] %m%n" />
		</layout>
	</appender>
	<root>
		<appender-ref ref="FileTxtAppender" />
	</root>
</log4j:configuration>
